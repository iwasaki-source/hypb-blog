---
const { prev, next, prevTitle, nextTitle, prevImage, nextImage } = Astro.props;
---
<div class="pagination-box">
  {prev ?
    <a href={prev} class="prev-inner">
      <p class="cap">前の記事</p>
      <div class="img">
        <img src={prevImage.src} alt="">
      </div>
      <p class="title">{prevTitle}</p>
    </a> : <div></div>
  }
  <div class="link-btn">
    <a href="/articles/">記事一覧へ</a>
  </div>
  {next ?
    <a href={next} class="next-inner">
      <p class="cap next">次の記事</p>
      <div class="img">
        <img src={nextImage.src} alt="">
      </div>
      <p class="title">{nextTitle}</p>
    </a> : <div></div>
  }
</div>

<style lang="scss">
  .pagination-box {
    margin-top: 3rem;
    padding: 3.5rem 2.5rem 3rem;
    background-color: var(--gray-10);
    border-radius: 38px;
    display: grid;
    grid-template-columns: 1fr 1.1fr 1fr;
    a {
      color: var(--black);
    }
    .img {
      width: 100%;
      max-height: 140px;
      border-radius: 18px;
      overflow: hidden;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: .5s;
      }
    }

    .prev-inner {
      margin-right: 1.75rem;
    }
    .next-inner {
      margin-left: 1.75rem;
    }
    .cap {
      margin-bottom: 0.5rem;
      &.next {
        text-align: right;
      }
    }
    .title {
      font-size: 0.875rem;
      margin-top: 0.75rem;
    }
  }
  .link-btn {
      text-align: center;
      align-self: center;
      a {
        display: inline-block;
        background-color: var(--yellow);
        border: 1px solid var(--black);
        width: 100%;
        padding: 0.875rem 1rem;
        border-radius: 38px;
        font-size: 1.125rem;
        letter-spacing: 0.1em;
        align-items: center;
        position: relative;
        z-index: 1;
        overflow: hidden;
        &::before {
          content: '';
          display: block;
          background-color: var(--black);
          width: 100%;
          height: 100%;
          position: absolute;
          left: 0;
          top: 0;
          transform: scale(0, 1);
          transform-origin: right top;
          transition: transform .4s ease;
          z-index: -1;
        }
      }
    }
  @media (hover: hover) {
    .link-btn {
      a {
        &:hover {
          color: var(--gray-10);
          &::before {
            transform-origin: left top;
            transform: scale(1, 1);
          }
        }
      }
    }
    .prev-inner, .next-inner {
      &:hover {
        .img {
          img {
            scale: (1.05);
          }
        }
      }
    }
  }
</style>