---
import { Image } from "astro:assets";
const { title, src, alt } = Astro.props;
---

<figure class="figure">
  <Image src={src} alt={alt} width="1200" height="675" />
  { title && (
      <figcaption class="figcaption">
        <Fragment set:html={title} />
      </figcaption>
    )
  }
</figure>

<style lang="scss">
  .figure {
    margin-block: 2.5rem;
  }
  .figcaption {
    margin-top: 0.5rem;
    text-align: center;
    font-size: 0.9375rem;
    color: var(--black);
  }
</style>