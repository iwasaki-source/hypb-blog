---
import '@pagefind/default-ui/css/ui.css';
---

<div class="container">
  <div class="overlay"></div>
  <div class="modal">
    <div id="search"></div>
  </div>
</div>

<style lang="scss">
  .container {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    padding: 10vh;
    overflow: auto;
  }
  .overlay {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #0f172acc;
    backdrop-filter: blur(4px);
    z-index: -1;
  }
  .modal {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    border-radius: 0.5rem;
    background: #1e293b;
    --pagefind-ui-background: #1e293b;
    --pagefind-ui-border: rgba(226, 232, 240, 0.0509803922);
    --pagefind-ui-text: var(--gray-10);
  }
</style>

<script>
  import { PagefindUI } from '@pagefind/default-ui';

  new PagefindUI({
    element: '#search',
    pageSize: 15,
    translations: {
      placeholder: 'キーワードで検索する',
      clear_search: 'クリア',
    },

  })
</script>