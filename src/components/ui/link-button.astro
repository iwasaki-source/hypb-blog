---
const { link, text } = Astro.props;
---
<div class="inner">
  <a href={link}>{text}</a>
</div>

<style lang="scss">
  .inner {
    text-align: center;
    a {
      position: relative;
      display: inline-block;
      color: var(--gray-10);
      font-size: 1.5rem;
      letter-spacing: 0.2em;
      width: 550px;
      padding: 1rem 0;
      background-color: var(--black);
      border: 1px solid var(--black);
      border-radius: 2rem;
      z-index: 1;
      overflow: hidden;
      &::before {
        content: '';
        display: block;
        background-color: var(--yellow);
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        transform: scale(0, 1);
        transform-origin: right top;
        transition: transform .4s ease;
        z-index: -1;
      }
    }
  }
  @media (hover: hover) {
    .inner {
      a {
        &:hover {
          color: var(--black);
          &::before {
            transform-origin: left top;
            transform: scale(1, 1);
          }
        }
      }
    }
  }
  @include mixin.mobile {
    .inner {
      a {
        width: 380px;
        font-size: 1.25rem;
      }
    }
  }
  @include mixin.phone {
    .inner {
      a {
        width: 280px;
        font-size: 1.125rem;
        padding: 0.75rem 0;
      }
    }
  }
</style>