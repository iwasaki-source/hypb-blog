---
import Accordion from "./ui/accordion.astro";
import { category, tags } from "../lib/constants";

const categoryTag = [
  {
    title: 'Category',
    items: category.map(item => ({
      ...item
    }))
  },
  {
    title: 'Tag',
    items: tags.map(item => ({
      ...item
    }))
  }
]
---
<div class="sidebar for-large">
  <div class="accordion-wrapper">
    {categoryTag.map(item => {
      const { title, items } = item;
      return (
        <Accordion title={title} items={items}/>
      )
    })
  }
  </div>
</div>

<style lang="scss">
  .sidebar {
    width: 220px;
  }
  .accordion-wrapper {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
</style>