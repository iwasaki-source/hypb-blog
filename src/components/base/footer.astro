---
import '@fontsource-variable/noto-serif-display';
import Logo from "./logo.astro";

const lists = [
  [
    {text: 'トップページ', link: '/'},
    {text: '記事一覧', link: '/articles'},
    {text: 'このサイトについて', link: '/about'},
  ],
  [
    {text: 'お問い合わせ', link: '/contact'},
    {text: 'サイトポリシー', link: '/site-policy'},
    {text: 'プライバシーポリシー', link: '/privacy-policy'},
  ]
]
---
<footer class="footer">
  <div class="inner">
    <Logo class="logo-footer" />
    <nav class="nav">
      {lists.map((list) => {
        return (
        <ul class="list">
          {list.map((item) =>
            <li class="item">
              <a href={item.link}>{item.text}</a>
            </li>)}
        </ul>
      )})}
    </nav>
    <small class="copy">© нуль</small>
  </div>
</footer>

<style lang="scss">
  .footer {
    margin-top: 160px;
    background-color: var(--gray-10);
    border: 1px solid var(--black);
    border-top-right-radius: 48px;
    border-top-left-radius: 48px;
  }
  .inner {
    max-width: 1380px;
    padding: 3.5rem 4rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    grid-template-rows: 1fr auto;
    gap: 4rem;
  }
  .nav {
    display: flex;
    gap: 4rem;
  }
  .list {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }
  .item {
    a {
      color: var(--black);
      font-size: 1.125rem;
      font-weight: bold;
    }
  }
  .copy {
    display: block;
    align-self: end;
    font-size: 1rem;
    font-family: 'Noto Serif Display Variable', serif;
  }
  @include mixin.mobile {
    .footer {
      margin-top: 120px;
      border-top-right-radius: 30px;
      border-top-left-radius: 30px;
    }
    .inner {
      justify-content: space-between;
      padding: 2rem;
      gap: 1.5rem;
    }
    .nav {
      gap: 2rem;
    }
    .item {
      a {
        font-size: 1rem;
      }
    }
    .copy {
      grid-area: 2 / 1 / 3 / 3;
      text-align: right;
    }
  }
  @include mixin.phone {
    .footer {
      margin-top: 80px;
      border-top-right-radius: 20px;
      border-top-left-radius: 20px;
    }
    .inner {
      padding: 1.5rem 1rem 2rem;
      padding-left: 1.375rem;
      display: block;
    }
    .nav {
      margin-block: 1.5rem 1rem;
    }
    .item {
      a {
        font-size: 0.875rem;
      }
    }
    .copy {
      text-align: left;
    }
  }
</style>